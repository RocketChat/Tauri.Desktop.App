{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "rocketchat-tauri",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "shell": {
        "all": false,
        "open": true
      },
      "os": {
        "all" : true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.dev",
      "targets": "all"
    },
    "security": {
      "csp": "default-src 'self'; connect-src 'self' wss://open.rocket.chat; frame-src 'self' https://open.rocket.chat; img-src 'self' https://open.rocket.chat; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'",
      "devCsp": "default-src 'self'; connect-src 'self' wss://open.rocket.chat; frame-src 'self' https://open.rocket.chat; img-src 'self' https://open.rocket.chat; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'",
      "dangerousRemoteDomainIpcAccess": [
        {
          "domain": "open.rocket.chat",
          "windows": ["main"],
          "plugins": [],
          "scheme": "all",
          "enableTauriAPI": true
        }
      ]
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "userAgent": "Tauri-Rocket.Chat-Client/1.0.0",
        "label": "main",
        "url": "https://open.rocket.chat/login",
        "fullscreen": false,
        "resizable": true,
        "title": "Rocket Chat",
        "titleBarStyle": "Overlay",
        "width": 800,
        "height": 600
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
