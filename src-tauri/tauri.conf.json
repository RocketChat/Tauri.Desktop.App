{
  "build": {
    "withGlobalTauri": true,
    "devPath": "https://open.rocket.chat"
  },
  "package": {
    "productName": "rocketchat-tauri",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.dev",
      "targets": "all"
    },
    "pattern": {
      "use": "brownfield"
    },
    "security": {
      "dangerousRemoteDomainIpcAccess": [
        {
          "domain": "open.rocket.chat",
          "windows": ["core"],
          "plugins": ["event"],
          "scheme": "all",
          "enableTauriAPI": true
        }
      ]
    },
    "updater": {
      "active": false
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
